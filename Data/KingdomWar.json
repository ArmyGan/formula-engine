    "archetypes": [
        {
            "name": "Soldier",
            "properties": {
                "Health": "100.0",
                "Damage": "10.0"
            },
            "events": [
                {
                    "name": "OnCreate",
                    "actions": [
                        {
                            "action": "SetProperty",
                            "property": "Health",
                            "value": "Random(Health) + 1"
                        },
                        {
                            "action": "if",
                            "condition": "event:RedTeam",
                            "actions": [
                                {
                                    "action": "SetGoalState",
                                    "binding": "Unit",
                                    "property": "BlueColor",
                                    "value": "0.0"
                                },
                                {
                                    "action": "SetGoalState",
                                    "binding": "Unit",
                                    "property": "Teleport",
                                    "value": "Vec(0, 0)"
                                }
                            ],
                            "else": [
                                {
                                    "action": "SetGoalState",
                                    "binding": "Unit",
                                    "property": "BlueColor",
                                    "value": "1.0"
                                },
                                {
                                    "action": "SetGoalState",
                                    "binding": "Unit",
                                    "property": "Teleport",
                                    "value": "Vec(19, 19)"
                                }
                            ]
                        }
                    ]
                }
            ],
            "bindings": [
                "Unit"
            ]
        },

        {
            "name": "Platoon",
            "properties": {
                "Health": "SumOf(Soldiers:Health)",
