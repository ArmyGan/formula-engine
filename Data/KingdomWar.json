                    ]
                },
                {
                    "name": "SpawnSoldier",
                    "actions": [
                        {
                            "action": "CreateListMember",
                            "list": "Soldiers",
                            "archetype": "Soldier",
                            "params": {
                                "RedTeam": "event:RedTeam"
                            }
                        }
                    ]
                }
            ]
        },

        {
